root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_finel_newline = true

[*.js]
indent_style = space
tab_width = 2

[*.rb]
indent_style = space
tab_width = 2

[*.md]
indent_style = space
tab_width = 4
trim_trailing_whitespace = false

[*.py]
indent_style = space
tab_width = 4

[*.html]
indent_style = space
tab_width = 2

[*.css]
indent_style = space
tab_width = 2

[Makefile]
indent_style = tab
