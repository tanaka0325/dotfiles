[user]
	name = Hiroyuki Tanaka
	email = h.tanaka.0325@gmail.com
[github]
	user = tanaka0325
[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
	autoCRLF = false
	quotepath = false
[push]
	default = simple
[commit]
	template = ~/.gitmessage.txt
[ghq]
	root = ~/go/src
[fetch]
	prune = true
[alias]
	# human-git-aliases
	unstage = reset HEAD --
	cancel = reset --soft HEAD^
	export = "!f(){ git checkout-index -f -a --prefix=$1/ ;}; f"
	discard = checkout --
	save = commit -m
	unsave = commit --amend
	last = log -1 HEAD --format=format:"%Cred%H"
	summary = status -u -s
	new-branch = checkout -b
	rename-branch = branch -m
	delete-branch = branch -D
	branches = branch -a
	branchout = checkout -b
	stashes = stash list
	prestage = diff
	precommit = diff --cached
	remotes = remote -v
	unstash = stash pop
	what = show
	graph = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --all --date=short
	## old alias
	st = status
	br = branch
	co = checkout
	ci = commit
	ad = add
	ls = log --stat
	lp = log -p
	diffc = diff --cached
	diffw = diff --word-diff
	sw = switch
	wk = worktree
	cwk = "!f(){ git worktree add ./wk-$1 $1;};f"
	nwk = "!f(){ git worktree add -b $1 ./wk-$1;};f"
	rmwk = "!f(){ rm -rf wk-$1 && git worktree prune;};f"
	rmwkb = "!f(){ rm -rf wk-$1 && git worktree prune && git branch -D $1;};f"
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential]
	helper = store --file ~/.git-credentials
[merge]
	tool = vimdiff
	conflictstyle = zdiff3
[mergetool]
	prompt = false
[url "git@github.com:"]
	insteadOf = https://github.com/
[include]
	path = ~/.gitconfig.local
[pull]
	ff = only
