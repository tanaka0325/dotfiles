[alias]
	# human-git-aliases
	unstage = reset HEAD --
	cancel = reset --soft HEAD^
	export = "!f(){ git checkout-index -f -a --prefix=$1/ ;}; f"
	discard = checkout --
	save = commit -m
	unsave = commit --amend
	last = log -1 HEAD --format=format:"%Cred%H"
	summary = status -u -s
	new-branch = checkout -b
	rename-branch = branch -m
	delete-branch = branch -D
	branches = branch -a
	branchout = checkout -b
	stashes = stash list
	prestage = diff
	precommit = diff --cached
	remotes = remote -v
	unstash = stash pop
	what = show
	## old alias
	st = status
	br = branch
	co = checkout
	ci = commit
	ad = add
	ls = log --stat
	lp = log -p
	diffc = diff --cached
	diffw = diff --word-diff
	sw = switch
	wk = worktree
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
